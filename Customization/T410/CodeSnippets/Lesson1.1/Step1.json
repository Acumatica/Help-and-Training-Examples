add container "InvoiceSummary" {
  add field "Customer"
  add field "Date"
  add field "Type"
  add field "Status"
  add field "Description"
  add field "Amount"
  add field "Balance"
  add field "DiscountTotal"
  add field "VATExemptTotal"
  add field "VATTaxableTotal"
}
add container "Details" {
  containerActionsToExpand = 1
  add field "Branch"
  add field "OrderNbr"
  add field "Warehouse"
  add field "Quantity"
  add field "UnitPrice"
  add field "Account"
  add field "Subaccount"
}
add container "Taxes" {
  add field "TaxID"
  add field "TaxRate"
  add field "TaxableAmount"
  add field "TaxAmount"
}