add screen SO303000 {
  add container "InvoiceSummary" {
    add field "Customer"
    add field "Date"
    add field "Type"
    add field "Status"
    add field "Description"
    add field "Amount"
    add field "Balance"
    add field "DocumentDiscounts"
    add field "FreightTotal"
    add field "TaxTotal"
    
    add recordAction "Save" {
      behavior = Save
    }
    add recordAction "Cancel" {
      behavior = Cancel
    }
    add containerAction "Insert" {
      behavior = Create
    }
    add recordAction "Release" {
      syncLongOperation = true
      behavior = Record
    }
  }
  add container "Details" {
    containerActionsToExpand = 1
    add field "Branch"
    add field "OrderNbr"
    add field "Warehouse"
    add field "Quantity"
    add field "UnitPrice"
    add field "Account"
    add field "Subaccount"
  }
  add container "Taxes" {
    add field "TaxID"
    add field "TaxRate"
    add field "TaxableAmount"
    add field "TaxAmount"
  }
}